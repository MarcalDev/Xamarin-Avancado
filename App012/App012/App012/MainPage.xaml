             x:Class="App012.MainPage">

    <StackLayout>
        <Label x:Name="LblMsg"/>
        <Entry x:Name="TxtNome" Placeholder="Digite o seu nome"/>
        <Entry x:Name="TxtEmail" Placeholder="Digite o seu email"/>
        <Entry x:Name="TxtCPF" Placeholder="Digite o seu CPF"/>
        <Button x:Name="BtnSalvar" Text="ENVIAR"/>
    </StackLayout>

</ContentPage>
