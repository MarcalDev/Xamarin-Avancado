<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Padding="30"
             x:Class="App08.MainPage">

    <AbsoluteLayout x:Name="Container">
        <Label  x:Name="MyLabel" Text="Carregar" >
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>

            </Label.GestureRecognizers>
        </Label>
        <Frame Margin="0,30,0,0" BorderColor="Black" Padding="5" WidthRequest="300">
           <BoxView HorizontalOptions="Start" x:Name="MyBox" WidthRequest="50" HeightRequest="50"/>          
        </Frame> 
    </AbsoluteLayout>
</ContentPage>
